<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <system.web>
        <customErrors mode="On" defaultRedirect="/error.php">
            <error statusCode="400" redirect="/error.php" />
            <error statusCode="401" redirect="/error.php" />
            <error statusCode="404" redirect="/error.php" />
            <error statusCode="500" redirect="/error.php" />
        </customErrors>
    </system.web>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Imported Rule 1" stopProcessing="true">
                    <match url="^([^\.]+)$" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile"
                             ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="{R:1}.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>

</configuration>
